BoxLayout:
    orientation: "vertical"
    BoxLayout:
        BoxLayout:
            orientation: "vertical"
            Button:
                id: player1_button
                text: "player1"
                on_press: app.switch_player(self.text)
                color: (1, 0, 0, 1)
                font_size: 50
            BoxLayout:
                id: player1
                size_hint_y: 0.4
        BoxLayout:
            orientation: "vertical"
            Button:
                id: player2_button
                text: "player2"
                on_press: app.switch_player(self.text)
                color: (0, 1, 0, 1)
                font_size: 50
            BoxLayout:
                id: player2
                size_hint_y: 0.4
        BoxLayout:
            orientation: "vertical"
            Button:
                id: player3_button
                text: "player3"
                on_press: app.switch_player(self.text)
                color: (0.1, 0.5, 1, 1)
                font_size: 50
            BoxLayout:
                id: player3
                size_hint_y: 0.4
        BoxLayout:
            orientation: "vertical"
            Button:
                id: player4_button
                text: "player4"
                on_press: app.switch_player(self.text)
                color: (1, 1, 0, 1)
                font_size: 50
            BoxLayout:
                id: player4
                size_hint_y: 0.4
        Button:
            text: "MENU"
            on_press: app.switch_player()
            font_size: 50
    BoxLayout:

        Label:
            size_hint_x: 0.2
            id: statistics
            font_size: 35
            text: ""
        BoxLayout:
            id: cards

    BoxLayout:
        size_hint_y: 2
        BoxLayout:

            BoxLayout:
                orientation: "vertical"
                Button:
                    text: "max_hp"
                    on_press: app.activate_modify_model(self.text)
                    font_size: 30
                Button:
                    text: "max_energy"
                    on_press: app.activate_modify_model(self.text)
                    font_size: 30
                Button:
                    text: "attack_range"
                    on_press: app.activate_modify_model(self.text)
                    font_size: 30
                Button:
                    text: "current_hp"
                    on_press: app.activate_modify_model(self.text)
                    font_size: 30
                Button:
                    text: "current_energy"
                    on_press: app.activate_modify_model(self.text)
                    font_size: 30
            BoxLayout:
                orientation: "vertical"
                Button:
                    text: "Equip..."
                    on_press: app.equip_item()
                    font_size: 30
                Button:
                    text: "Show Equipment"
                    on_press: app.create_show_equipment_buttons()
                    font_size: 30
                BoxLayout:
                    Button:
                        text: "Steal"
                        on_press: app.activate_steal()
                        font_size: 30
                    Button:
                        text: "Reset Energy"
                        on_press: app.modify_statistic(self)
                        font_size: 30
                BoxLayout:
                    Button:
                        text: "Check Card"
                        on_press: app.activate_check_card()
                        font_size: 30
                    Button:
                        text: "Withdraw Discard"
                        on_press: app.withdraw_discard()
                        font_size: 30

        BoxLayout:
            orientation: "vertical"
            BoxLayout:

                id: equipments
            BoxLayout:
                BoxLayout:
                    orientation: "vertical"
                    id: up_down


                BoxLayout:
                    orientation: "vertical"
                    Button:
                        text:"Draw A Normal Card"
                        on_press: app.draw_card("normal")
                        color: (0, 1, 1, 1)
                        font_size: 30
                    Button:
                        text:"Draw A Premium Card"
                        on_press: app.draw_card("premium")
                        color: (0.9, 0, 0.9, 1)
                        font_size: 30


    Label:
        size_hint_y: 0.3
        id: output_prompt
        font_size: 20
        font_name: "fonts/msyh.ttc"
        text: ""
